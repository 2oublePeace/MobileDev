<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddFragment">

    <TextView
        android:id="@+id/addTextViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addTextViewName" />

    <EditText
        android:id="@+id/addEditTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addTextViewAge" />

    <EditText
        android:id="@+id/addEditTextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp" />

    <CheckBox
        android:id="@+id/addCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addCheckBox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/addButtonAdd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="@string/addButtonAdd" />

        <Button
            android:id="@+id/addButtonBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="@string/addButtonBack" />
    </LinearLayout>

</LinearLayout>