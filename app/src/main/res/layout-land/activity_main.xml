<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>

        <Button
            android:id="@+id/addButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="addText"
            android:text="@string/add_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">


                <Button
                    android:id="@+id/selectAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="printSelectedItems"
                    android:text="@string/buttonToast"
                    android:layout_margin="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">


                <Button
                    android:id="@+id/buttonSelectAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/buttonSelectAll"
                    android:layout_weight="1"
                    android:onClick="selectAll"
                    android:layout_margin="2dp"/>

                <Button
                    android:id="@+id/buttonUnselectAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/buttonUnselectAll"
                    android:layout_weight="1"
                    android:onClick="resetAll"
                    android:layout_margin="2dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>